<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f0f9ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e0f2fe;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="verified" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#10b981;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#059669;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="unverified" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#f59e0b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d97706;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="600" fill="url(#bg)"/>
  
  <!-- Title -->
  <text x="400" y="80" text-anchor="middle" font-family="Arial, sans-serif" font-size="32" font-weight="bold" fill="#1e40af">
    Data Verification
  </text>
  
  <!-- Signed Observations Section -->
  <rect x="50" y="150" width="300" height="350" fill="url(#verified)" rx="15" opacity="0.1"/>
  <text x="200" y="180" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#059669">
    Signed Observations
  </text>
  
  <!-- Verified checkmarks -->
  <circle cx="120" cy="220" r="15" fill="#10b981"/>
  <path d="M 112 220 L 118 226 L 128 214" stroke="white" stroke-width="2" fill="none"/>
  
  <circle cx="200" cy="260" r="15" fill="#10b981"/>
  <path d="M 192 260 L 198 266 L 208 254" stroke="white" stroke-width="2" fill="none"/>
  
  <circle cx="280" cy="300" r="15" fill="#10b981"/>
  <path d="M 272 300 L 278 306 L 288 294" stroke="white" stroke-width="2" fill="none"/>
  
  <!-- Digital signature representation -->
  <rect x="80" y="350" width="240" height="40" fill="#059669" opacity="0.2" rx="5"/>
  <text x="200" y="375" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#059669">
    Cryptographically Signed
  </text>
  
  <!-- Identity badge -->
  <rect x="80" y="410" width="240" height="30" fill="#059669" opacity="0.2" rx="5"/>
  <text x="200" y="430" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#059669">
    Verified Identity (DID)
  </text>
  
  <!-- Unsigned Observations Section -->
  <rect x="450" y="150" width="300" height="350" fill="url(#unverified)" rx="15" opacity="0.1"/>
  <text x="600" y="180" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#d97706">
    Unsigned Observations
  </text>
  
  <!-- Question marks for uncertainty -->
  <circle cx="520" cy="220" r="15" fill="#f59e0b"/>
  <text x="520" y="228" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="white">?</text>
  
  <circle cx="600" cy="260" r="15" fill="#f59e0b"/>
  <text x="600" y="268" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="white">?</text>
  
  <circle cx="680" cy="300" r="15" fill="#f59e0b"/>
  <text x="680" y="308" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="white">?</text>
  
  <!-- Anonymous representation -->
  <rect x="480" y="350" width="240" height="40" fill="#f59e0b" opacity="0.2" rx="5"/>
  <text x="600" y="375" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#d97706">
    Anonymous Source
  </text>
  
  <!-- Lower trust indicator -->
  <rect x="480" y="410" width="240" height="30" fill="#f59e0b" opacity="0.2" rx="5"/>
  <text x="600" y="430" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#d97706">
    Lower Trust Weight
  </text>
  
  <!-- VS indicator -->
  <text x="400" y="330" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#6b7280">
    VS
  </text>
  
  <!-- Bottom subtitle -->
  <text x="400" y="550" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#4b5563">
    Building Trust Through Verification
  </text>
</svg>